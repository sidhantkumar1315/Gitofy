<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gitofy"
        tools:targetApi="31">
        <activity
            android:name=".view.activities.CompareActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.IssueDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.CreateIssueActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.IssuesActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.HeatmapActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.FileDiffActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.CommitDetailActivity"
            android:exported="false" />
        <activity android:name=".view.activities.RepoDEtailsActivity" />
        <activity
            android:name=".view.activities.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".view.activities.PlatformSelectorActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.OAuthCallbackActivity"
            android:exported="true">
            <intent-filter android:label="GitHub OAuth Callback">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="myapp" />
            </intent-filter>
        </activity>
    </application>

</manifest>